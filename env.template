# YNAB API Token
# Get your token from: https://app.ynab.com/settings/developer
YNAB_TOKEN=your_ynab_token_here

# Finolog API Token
# Get your token from Finolog settings
FINOLOG_API_TOKEN=your_finolog_token_here

# Aspire Bank API Credentials (для прямых запросов, без прокси)
# Получите credentials из настроек Aspire API
# ASPIRE_PROXY_URL закомментировано - теперь используем прямые запросы
ASPIRE_CLIENT_ID=your_aspire_client_id
ASPIRE_CLIENT_SECRET=your_aspire_client_secret
